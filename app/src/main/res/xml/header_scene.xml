<?xml version="1.0" encoding="utf-8"?>
<MotionScene
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <StateSet motion:defaultState="@id/expanded_header" />

    <Transition
            motion:constraintSetStart="@+id/expanded_header"
            motion:constraintSetEnd="@+id/collapsed_header"
    />

    <ConstraintSet android:id="@+id/expanded_header">
        <Constraint android:id="@id/motion_spacer" />
        <Constraint android:id="@id/motion_title">
            <Transform android:scaleX="1" android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/collapsed_header">
        <Constraint android:id="@id/motion_spacer"/>
        <Constraint android:id="@id/motion_title">
            <Transform android:scaleX="0.5" android:scaleY="0.5" />
        </Constraint>
    </ConstraintSet>

</MotionScene>